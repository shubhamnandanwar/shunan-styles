<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="Button">
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:fontFamily">@font/poppins_semi_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:elevation">0dp</item>
		<item name="elevation">0dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
	</style>
	
	<style name="Button.Flat" parent="Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:paddingLeft">24dp</item>
		<item name="android:paddingRight">24dp</item>
		<item name="android:elevation">0dp</item>
		<item name="android:background">@color/transparent</item>
	</style>
	
	<style name="Button.Fancy" parent="Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">32dp</item>
		<item name="android:paddingRight">32dp</item>
		<item name="android:background">@drawable/border_button</item>
		<item name="android:layout_marginBottom">8dp</item>
	</style>
	
	<style name="Button.Small" parent="Button">
		<item name="android:textSize">13sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="cb_corner_radius">8dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:paddingStart">16dp</item>
		<item name="android:paddingEnd">16dp</item>
		<item name="android:minWidth">0dp</item>
	</style>
	
	<style name="Button.Small.White" parent="Button.Small">
		<item name="android:textColor">@color/text_color</item>
		<item name="cb_tint">@color/white</item>
		<item name="cb_corner_radius">16dp</item>
	</style>
	
	<style name="Button.Small.Solid.Red" parent="Button.Small">
		<item name="android:textColor">@color/white</item>
		<item name="cb_tint">@color/delete_red</item>
	</style>
	
	<style name="Button.Small.Outline" parent="Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="ob_corner_radius">8dp</item>
		<item name="ob_stroke_width">2dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:textColor">@color/secondary_text</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:minWidth">0dp</item>
	</style>
	
	<style name="Button.Small.Outline.Red" parent="Button.Small.Outline">
		<item name="android:textColor">@color/delete_red</item>
	</style>
	
	<style name="Button.Primary" parent="Button">
		<item name="cb_corner_radius">20dp</item>
	</style>
	
	<style name="Button.Primary.Square" parent="Button">
		<item name="cb_corner_radius">8dp</item>
	</style>
	
	<style name="Button.Primary.Square.Translucent" parent="Button.Primary.Square">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">44dp</item>
		<item name="cb_tint">@color/primary_light</item>
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:paddingLeft">24dp</item>
		<item name="android:paddingRight">24dp</item>
	</style>
	
	<style name="Button.Secondary" parent="Button.Primary">
		<item name="cb_tint">@color/light_divider</item>
		<item name="android:textColor">@color/light_primary_dark_white</item>
	</style>
	
	<style name="Button.Secondary.Small" parent="Button.Secondary">
		<item name="android:textSize">13sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="cb_corner_radius">8dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:paddingStart">16dp</item>
		<item name="android:paddingEnd">16dp</item>
		<item name="android:minWidth">0dp</item>
	</style>
	
	
	<style name="Button.Red" parent="Button.Primary">
		<item name="cb_tint">@color/light_divider</item>
		<item name="android:textColor">@color/delete_red</item>
	</style>
	
	<style name="Button.Delete" parent="Button.Primary">
		<item name="cb_tint">@color/delete_red</item>
		<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="Button.White" parent="Button.Primary">
		<item name="cb_tint">@color/white</item>
		<item name="android:textColor">@color/text_color</item>
	</style>
	
	<style name="Button.Black" parent="Button.Primary">
		<item name="cb_tint">@color/primary_text</item>
		<item name="android:textColor">@color/anti_primary_text</item>
	</style>
	
	<style name="Button.Outline" parent="Button">
		<item name="ob_tint">@color/colorPrimary</item>
		<item name="ob_corner_radius">20dp</item>
		<item name="android:textColor">@color/colorPrimary</item>
	</style>
	
	<style name="Button.Outline.White" parent="Button.Outline">
		<item name="ob_tint">@color/white</item>
		<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="Button.Outline.Black" parent="Button.Outline">
		<item name="ob_tint">@color/primary_text</item>
		<item name="android:textColor">@color/primary_text</item>
	</style>


</resources>