<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="Heading" parent="Text">
		<item name="android:fontFamily">@font/poppins_semi_bold</item>
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="Heading.White" parent="Heading">
		<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="Heading.Large" parent="Heading">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">20sp</item>
	</style>
	
	<style name="Heading.Small" parent="Heading">
		<item name="android:fontFamily">@font/poppins_medium</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="Heading.Mini" parent="Heading">
		<item name="android:fontFamily">@font/poppins_semi_bold</item>
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="Heading.Cursive" parent="Heading">
		<item name="android:fontFamily">@font/pacifico</item>
		<item name="android:textSize">20sp</item>
	</style>
	
	<style name="Heading.Cursive.Large" parent="Heading.Cursive">
		<item name="android:textSize">32sp</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="Heading.ExtraLarge" parent="Heading">
		<item name="android:textSize">24sp</item>
	</style>
	
	<style name="Heading.ExtraLarge.White" parent="Heading.ExtraLarge">
		<item name="android:textColor">@color/white</item>
	</style>
	

</resources>