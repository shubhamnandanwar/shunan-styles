<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="Text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/primary_text</item>
		<item name="android:textColorHint">@color/secondary_text</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">@font/poppins_regular</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:includeFontPadding">false</item>
	</style>
	
	<style name="Text.Secondary" parent="Text">
		<item name="android:textColor">@color/secondary_text</item>
		<item name="android:textSize">14sp</item>
	</style>
	
	
	<style name="Text.Secondary.Bold">
		<item name="android:fontFamily">@font/poppins_semi_bold</item>
	</style>
	
	
	<style name="Text.Secondary.Small" parent="Text.Secondary">
		<item name="android:textSize">12sp</item>
	</style>
	
	<style name="Text.Large" parent="Text">
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="Text.Bold">
		<item name="android:fontFamily">@font/poppins_medium</item>
	</style>
	
	<style name="Text.Bold.White">
		<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="Text.Bold.White.MultiLine">
		<item name="android:maxLines">100</item>
		<item name="android:layout_width">match_parent</item>
	</style>
	
	<style name="Text.Mini">
		<item name="android:textSize">12sp</item>
	</style>
	
	<style name="Text.Mini.Bold">
		<item name="android:fontFamily">@font/poppins_semi_bold</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>
	
	<style name="Text.Large.MultiLine">
		<item name="android:maxLines">100</item>
	</style>
	
	<style name="Text.MultiLine">
		<item name="android:maxLines">100</item>
	</style>
	
	<style name="Text.Secondary.MultiLine" parent="Text.Secondary">
		<item name="android:maxLines">100</item>
	</style>
	
	<style name="Text.Tiny" parent="Text">
		<item name="android:textSize">10sp</item>
	</style>
	
	<style name="Text.BookCoverTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">12sp</item>
		<item name="android:maxLines">3</item>
		<item name="android:ellipsize">end</item>
		<item name="android:paddingStart">6dp</item>
		<item name="android:paddingEnd">6dp</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:lineSpacingExtra">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:fontFamily">@font/pacifico</item>
	</style>
	
	<style name="Text.BookCoverTitle.Large">
		<item name="android:textSize">16sp</item>
		<item name="android:maxLines">4</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
	</style>

</resources>